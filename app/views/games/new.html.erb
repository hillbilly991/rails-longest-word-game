<div class="container">
  <h1>New Game</h1>
  <div class="cards-container">
    <% @letters.each do |l| %>
    <p class ="cards-letter"><%= p l %></p>
    <% end %>
  </div>

  <div class="form-container">
    <form class="form-div" action="/score" method="post">
      <p class="center-text">What is the longest word you can find?</p>
      <input type="text" name="word" placeholder="Type your word here">
       <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
       <%= hidden_field_tag :letters, @letters %>
      <input class="submit-btn" type="submit" name="Play">
    </form>
  </div>
</div>


